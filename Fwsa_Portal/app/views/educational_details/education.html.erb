<div class="form-main-container">

    <div class="form-container">
        <form action="/basic_details/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <h3 class="h1-span">Educational Detail Form</h3>
            <hr>
            <% if flash[:error]%>
                <p class="flash-error">
                    <%= flash[:error]%>
                </p>
                <%end%>
                    <table class="form-table">
                        <tr>
                            <td>
                                <p class="input-name">Current Class<span class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="basic_detail[gender]" required placeholder="-Select Your Gender-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Currently Studying 12th">
                                        <p class="input-option">Currently Studying 12th</p>
                                    </option>
                                    <option value="Completed 12th">
                                        <p class="input-option">Completed 12th</p>
                                    </option>
                                    <option value="Currently Pursuing Diploma">
                                        <p class="input-option">Currently Pursuing Diploma</p>
                                    </option>
                                    <option value="Completed Diploma">
                                        <p class="input-option">Completed Diploma</p>
                                    </option>
                                    <option value="Currently Pursuing 1st or 2nd Year">
                                        <p class="input-option">Currently pursuing 1st or 2nd year of Degree Course</p>
                                    </option>
                                    <option value="Completed 2nd Year">
                                        <p class="input-option">Completed 2nd year or more of Degree Course</p>
                                    </option>
                                    <option value="Completed a Degree Course">
                                        <p class="input-option">Completed a Degree Course</p>
                                    </option>
                                </select>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <p class="input-name">10th Standard:School Name<span class="required-star">*</span></p>
                            </td>
                            <td><input type="text" name="basic_detail[dob]" placeholder="School Name" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">10th Standard:School Type<span class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="basic_detail[gender]" required placeholder="-Select Your Gender-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Government">
                                        <p class="input-option">Government</p>
                                    </option>
                                    <option value="Government-Aided">
                                        <p class="input-option">Government-Aided</p>
                                    </option>
                                    <option value="Private">
                                        <p class="input-option">Private</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">10th Year of Completion <span class="required-star">*</span></p>
                            </td>
                            <td>
                                <input type="text" name="basic_detail[dob]" placeholder="Completion Year" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">10th Standard : Math Score (mention 'Your Marks'/'Total' - example: 90/100)<span class="required-star">*</span>  Mention 'N/A' if not applicable</p>
                            </td>
                            <td>
                                <textarea name="basic_detail[address]" placeholder="Math Score" required></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Email-Id<span class="required-star">*</span></p>
                            </td>
                            <td><input type="email" name="basic_detail[email_id]" placeholder="Email-Id" required></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Whatsapp Number<span class="required-star">*</span></p>
                            </td>
                            <td><input type="number" name="basic_detail[primary_number]" placeholder="Primary Number"
                                    required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Alternate Number<span class="required-star">*</span></p>
                            </td>
                            <td><input type="number" name="basic_detail[alternate_number]"
                                    placeholder="Alternate Number" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Parent Name<span class="required-star">*</span></p>
                            </td>
                            <td> <input type="text" name="basic_detail[parent_name]" placeholder="Parent Name" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Parent Relation<span class="required-star">*</span></p>
                            </td>
                            <td><input type="text" name="basic_detail[parent_relation]" placeholder="Parent Relation"
                                    required>
                            </td>
                        </tr>
                    </table>
                    <button class="form-btn">Next</button>
        </form>
    </div>
</div>





<style>
    html {
        width: 100%;
        height: 100%;
        font-family: neue-haas-grotesk-text, Helvetica, sans-serif;
    }

    body {
        background: rgb(255, 255, 255);
        background: linear-gradient(45deg, rgba(255, 255, 255, 1) 52%, rgba(236, 236, 236, 1) 56%);
