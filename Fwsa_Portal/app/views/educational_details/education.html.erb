    /* NAVBAR STYLING STARTS */
    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: absolute;
        width: 100%;
        background: rgba(255, 255, 255, 0);
        box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    a {
        color: black !important;
    }

    a:hover {
        border: none;
        color: white;
        border-bottom: 2px solid #63bfbf;
    }



    .logo_div {
        display: flex;
        justify-content: center;
        height: 30%;

    }

    .logo {
        text-transform: uppercase;
        text-decoration: none;
        margin: 0%;
    }

    .fw_logo {
        width: 75px;
        height: 50px;
    }

    /* NAVBAR MENU */
    .menu {
        display: flex;
        gap: 1em;
        font-size: 18px;
    }

    .menu li:hover {
        text-decoration: none;
        color: #63bfbf;
        border-radius: 5px;
        transition: 0.3s ease;
    }

    .menu li {
        padding: 5px 14px;
    }

    /* DROPDOWN MENU */
    .gallery {
        position: relative;
    }

    .dropdown {
        background: rgba(255, 255, 255, 0);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 1em 0;
        position: absolute;
        /*WITH RESPECT TO PARENT*/
        display: none;
        border-radius: 8px;
        top: 35px;
    }

    .dropdown li+li {
        margin-top: 10px;
    }

    .dropdown li {
        padding: 0.5em 1em;
        width: 8em;
        text-align: center;
    }

    .dropdown li:hover {
        text-decoration: none;
        color: #63bfbf;
    }

    .gallery:hover .dropdown {
        display: block;
    }

    .faq {
        position: relative;
    }



    .admission {
        position: relative;
    }

    .admission:hover .dropdown {
        display: block;
    }

    /* CHECKBOX HACK */
    input[type="checkbox"] {
        display: none;
    }

    /*HAMBURGER MENU*/
    .hamburger {
        display: none;
        font-size: 24px;
        user-select: none;
    }
</style>