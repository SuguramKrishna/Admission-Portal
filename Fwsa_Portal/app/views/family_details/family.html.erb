<div class="form-main-container">

    <div class="form-container">
        <form action="/family_details/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <h3 class="h1-span">Family Detail Form</h3>
            <hr>
            <% if flash[:error]%>
                <p class="flash-error">
                    <%= flash[:error]%>
                </p> 
                <%end%>
                    <table class="form-table">
                        <tr>
                            <td>
                                <p class="input-name">Are you from a single or no parent household ? <span
                                        class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="family_detail[parent_detail]" required
                                    placeholder="-Select-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Both Parents">
                                        <p class="input-option">I have BOTH parents</p>
                                    </option>
                                    <option value="Single Parents">
                                        <p class="input-option">I am from a Single Parent household</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">DO NOT have both parents</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Educational Qualification - Mother <span
                                        class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="family_detail[mother_qualification]" required
                                    placeholder="-Select-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Below 10th">
                                        <p class="input-option">Below 10th</p>
                                    </option>
                                    <option value="10th Pass">
                                        <p class="input-option">10th Pass</p>
                                    </option>
                                    <option value="12th/Diploma Pass">
                                        <p class="input-option">12th/Diploma Pass</p>
                                    </option>
                                    <option value="Enrolled for College - NC">
                                        <p class="input-option">Enrolled for College - Not Completed</p>
                                    </option>
                                    <option value="College Completed">
                                        <p class="input-option">College Completed</p>
                                    </option>
                                    <option value="NA">
                                        <p class="input-option">NA</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Educational Qualification - Father <span
                                        class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="family_detail[father_qualification]" required
                                    placeholder="-Select-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Below 10th">
                                        <p class="input-option">Below 10th</p>
                                    </option>
                                    <option value="10th Pass">
                                        <p class="input-option">10th Pass</p>
                                    </option>
                                    <option value="12th/Diploma Pass">
                                        <p class="input-option">12th/Diploma Pass</p>
                                    </option>
                                    <option value="Enrolled for College - NC">
                                        <p class="input-option">Enrolled for College - Not Completed</p>
                                    </option>
                                    <option value="College Completed">
                                        <p class="input-option">College Completed</p>
                                    </option>
                                    <option value="NA">
                                        <p class="input-option">NA</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Mother's Occupation <span class="required-star">* </span><span
                                        class="mention-span">(e.g. Home Maker/Tailor/Driver/Coolie/Unemployed) - Mark
                                        "N/A" if Not Applicable</span></p>
                            </td>
                            <td>
                                <input type="text" name="family_detail[mother_occupation]"
                                    placeholder="Mother's Occupation" required>
                            </td>
                        </tr>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Mother's Income - Monthly <span class="required-star">* </span><span class="mention-span">Mention 'N/A' if not
                                        applicable</span>
                                </p>
                            </td>
                            <td>
                                <input type="text" name="family_detail[mother_income]"
                                    placeholder="Mother's Income" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Father's Occupation <span class="required-star">* </span><span
                                        class="mention-span">(e.g. Home Maker/Tailor/Driver/Coolie/Unemployed) - Mark
                                        "N/A" if Not Applicable</span></p>
                            </td>
                            <td>
                                <input type="text" name="family_detail[father_occupation]"
                                    placeholder="Father's Occupation" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Father's Income - Monthly <span class="required-star">* </span><span class="mention-span">Mention 'N/A' if not
                                        applicable</span>
                                </p>
                            </td>
                            <td>
                                <input type="text" name="family_detail[father_income]"
                                    placeholder="Father's Income" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Other Income Sources - Monthly (example- My Salary = 3000, Brother's Salary = 2000) <span class="required-star">* </span><span class="mention-span">Mention 'N/A' if not
                                        applicable</span>
                                </p>
                            </td>
                            <td>
                                <input type="text" name="family_detail[other_income]"
                                    placeholder="Other Income" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Last Electricity Bill Amount <span
                                        class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="family_detail[electricity_amount]" required
                                    placeholder="-Select Your Gender-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="0">
                                        <p class="input-option">0 INR</p>
                                    </option>
                                    <option value="less than 100">
                                        <p class="input-option">Less than 100 INR</p>
                                    </option>
                                    <option value="100-500">
                                        <p class="input-option">100-500 INR</p>
                                    </option>
                                    <option value="500-1000">
                                        <p class="input-option">500-1000 INR</p>
                                    </option>
                                    <option value="1000-2000">
                                        <p class="input-option">1000-2000 INR</p>
                                    </option>
                                    <option value="above 2000">
                                        <p class="input-option">Above 2000 INR</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                    </table>
                    <div class="next-btn">
                        <button class="form2-btn">Next</button>
                    </div>
        </form>
    </div>
</div>





<style>
    html {
