        text-align: center;
    }

    .dropdown li:hover {
        text-decoration: none;
        color: #63bfbf;
    }

    .gallery:hover .dropdown {
        display: block;
    }

    .faq {
        position: relative;
    }



    .admission {
        position: relative;
    }

    .admission:hover .dropdown {
        display: block;
    }

    /* CHECKBOX HACK */
    input[type="checkbox"] {
        display: none;
    }

    /*HAMBURGER MENU*/
    .hamburger {
        display: none;
        font-size: 24px;
        user-select: none;
    }
