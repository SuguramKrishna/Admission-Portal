<div class="user-title">
    <h4 class="page-title">
        Our Staff
    </h4>
</div>

<div class="staff-listing-main">
    <div class="container">

        <div class="row text-center">
          <% @staffs.each do|staff|%>
            <div class="col-xl-3 col-sm-6 mb-5">
                <div class="bg-white rounded shadow-sm py-5 px-4">
                    <%if staff.profile.attached?%>
                    <%= image_tag staff.profile, alt: "Profile Image", class: "profile_img"%>
                    <% end %>
                    <h5 class="mb-0">
                        <%= staff.name %>
                    </h5><span class="small text-uppercase text-muted">
                        <%= staff.designation %>
                    </span>
                          <h3 class="small text-uppercase text-muted">
                           <%= staff.experience %> of Experience
                          </h3>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


<style>
    html {
        width: 100%;
        height: 100%;
        font-family: neue-haas-grotesk-text, Helvetica, sans-serif;
    }


    /* NAVBAR STYLING STARTS */
    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: absolute;
        width: 100%;
        background: rgba(255, 255, 255, 0);
        box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    a {
        color: black !important;
    }

    a:hover {
        border: none;
        color: white;
        border-bottom: 2px solid #63bfbf;
    }



    .logo_div {
        display: flex;
        justify-content: center;
        height: 30%;

    }

    .logo {
        text-transform: uppercase;
        text-decoration: none;
        margin: 0%;
    }

    .fw_logo {
        width: 75px;
        height: 50px;
    }

    /* NAVBAR MENU */
    .menu {
        display: flex;
        gap: 1em;
        font-size: 18px;
    }

    .menu li:hover {
        text-decoration: none;
        color: #63bfbf;
        border-radius: 5px;
        transition: 0.3s ease;
    }

    .menu li {
        padding: 5px 14px;
    }

    /* DROPDOWN MENU */
    .gallery {
        position: relative;
    }

    .dropdown {
        background: rgba(255, 255, 255, 0);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 1em 0;
        position: absolute;
        /*WITH RESPECT TO PARENT*/
        display: none;
        top: 35px;
    }

    .dropdown li+li {
        margin-top: 10px;
    }

    .dropdown li {
        padding: 0.5em 1em;
        width: 8em;
        text-align: center;
    }

    .dropdown li:hover {
        text-decoration: none;
        color: #63bfbf;
    }

    .gallery:hover .dropdown {
        display: block;
    }

    .faq {
        position: relative;
    }



    .admission {
        position: relative;
    }

    .admission:hover .dropdown {
        display: block;
    }

    /* CHECKBOX HACK */
    input[type="checkbox"] {
        display: none;
    }

    /*HAMBURGER MENU*/
    .hamburger {
        display: none;
        font-size: 24px;
        user-select: none;
    }
</style>