        <!-- NAVIGATION MENUS -->
        <div class="menu"> 
            <li><a href="/admissions/index">Home</a></li>
            <li><a href="/admissions/staff">Staff</a></li>
            <li class="gallery"><a href="#">Admission</a>
                <!-- DROPDOWN MENU -->
                <ul class="dropdown">
                    <li><a href="/basic_details/basic">Apply Now </a></li>
                      <li><a href="/admissions/search">Check Status</a></li>
                </ul>
            </li>
            <li class="gallery">
                <a href="/admissions/gallery">Gallery</a>
