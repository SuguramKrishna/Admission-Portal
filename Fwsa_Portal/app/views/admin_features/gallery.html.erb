<div class="gallery-listing-main-div">
  <div class="gallery-listing">
    <% @gallery.each do |gallery_record|%>
  <% gallery_record.images.each do|image|%>
    <%= image_tag image%>
    <% end %>
  <% end %> 
  </div>
</div>


<div class="add-btn-div">
  <div class="title">
    <em class="fa-solid fa-image"></em>
                <span class="text">Gallery</span>
                <button onclick="popupover()" class="gallery-add-btn"><em class="fa-solid fa-plus"></em></button>
            </div>

</div>

<div class="popup" id="popup-overlay">


<form action="/gallery_add" method="post" enctype="multipart/form-data">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <div class="gallery-adding-center"> 
    <div class="gallery-adding-title">
      <h4>
        Add One or More Image To Upload 
      </h4>
      <span class="cross-symbol">
        <a onclick="crossign()">
          <em class="fa-solid fa-xmark"></em>
        </a>
      </span>
    </div>
    <div class="gallery-adding-file">
      <label for="images" class="gallery-adding-upload"><em class="fa-solid fa-file-image"></em></label> 
      <input type="file" id="images" name="images" class="gallery-adding-input" multiple>
    </div>
  </div>
  <button type="submit" class="gallery-submit-btn">Upload Image</button>
</form>

<script>



  function popupover() {
    document.getElementById("popup-overlay").style.display = "block";
  }

  function crossign() {
    document.getElementById("popup-overlay").style.display = "none";
  }

</script>