<div class="form-main-container">

    <div class="form-container">
        <form action="/refferal_details/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <h3 class="h1-span">Referral Detail Form</h3>
            <hr>
            <% if flash[:error]%>
                <p class="flash-error">
                    <%= flash[:error]%>
                </p>
                <%end%>
                    <table class="form-table">
                        <tr>
                            <td>
                                <p class="input-name">How did you come to know about FWSA?
                                    ? <span class="required-star">*</span></p>
                            </td>
                            <td>
                                <select name="refferal_details[approach]" required placeholder="-Select-">
                                    <option value="" disabled selected hidden>-Select-</option>
                                    <option value="Both Parents">
                                        <p class="input-option">Freshworks Employee</p>
                                    </option>
                                    <option value="Single Parents">
                                        <p class="input-option">School HM/Teacher</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">NGO</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Youtube</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Instagram</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Whatsapp</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Facebook</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Radio</p>
                                    </option>
                                    <option value="No Parents">
                                        <p class="input-option">Newspaper</p>
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">If you have mentioned 'Freshworks Employee'/'School HM/Teacher'/'NGO' above, please mention their name, organisation and contact information (phone/email) <span class="required-star">* </span><span
                                        class="mention-span">Mark
                                        'N/A' if Not Applicable</span></p>
                            </td>
                            <td>
                                <input type="text" name="refferal_details[refferal_person_details]"
                                    placeholder="Your Answer" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Please mention the full name of someone we can speak to for the verification of the form information <span class="required-star">* </span></p>
                            </td>
                            <td>
                                <input type="text" name="refferal_details[refferal_person_name]"
                                    placeholder="Your Answer" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Please mention the phone number of the above person for the verification of the form information <span class="required-star">* </span></p>
                            </td>
                            <td>
                                <input type="text" name="refferal_details[refferal_person_number]"
                                    placeholder="Your Answer" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Please mention the relationship the above person shares with you <span class="required-star">* </span><span
                                    class="mention-span">Example: 'Uncle/School Head Mistress/Neighbour'. The Referee must be of age 21 or more</span></p>
                            </td>
                            <td>
                                <input type="text" name="refferal_details[refferal_person_relationship]"
                                    placeholder="Your Answer" required>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="input-name">Please leave any additional information you would like to share with the Admissions Team <span class="required-star">* </span></p>
                            </td>
                            <td>
                                <input type="text" name="refferal_details[additional_information]"
                                    placeholder="Your Answer" required>
                            </td>
                        </tr>
                    </table>
                    <div class="next-btn">
                        <button class="form2-btn">Next</button>
                    </div>
        </form>
    </div>
</div>





